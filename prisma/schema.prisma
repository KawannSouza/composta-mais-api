datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  COMPOSTADOR
  DOADOR
  ADMIN
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  password       String
  phone          String?   // opcional
  role           Role
  address        String?   // endere√ßo do local de compostagem (para compostador)
  status         UserStatus @default(ACTIVE) // status da conta (ativo, suspenso..)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  lastLogin      DateTime?

  // relacionamentos
  donations      Donation[] // se quiser relacionar depois
}

model Donation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}