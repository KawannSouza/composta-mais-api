datasource  db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  COMPOSTADOR
  DOADOR
  ADMIN
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  password       String
  phone          String?   // opcional
  role           Role
  address        String?   // endereço do local de compostagem (para compostador)
  status         UserStatus @default(ACTIVE) // status da conta (ativo, suspenso..)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  lastLogin      DateTime?

  // relacionamentos
  donations      Donation[]
  registros      Registro[] // ✅ ADICIONADO: um usuário pode ter vários registros
}

model Donation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  amount    Float
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}

model Registro {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  data             DateTime
  tipoDeResiduo    String
  notas            String
  problemas        String

  // ✅ RELAÇÃO COM USUÁRIO
  user             User     @relation(fields: [userId], references: [id])
  userId           String   @db.ObjectId
}
